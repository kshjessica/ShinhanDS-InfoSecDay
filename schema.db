-- ===============================
-- 사용자(자산) 마스터 테이블
-- ===============================
CREATE TABLE IF NOT EXISTS users (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    department TEXT NOT NULL,
    asset_no TEXT NOT NULL,
    sticker_no TEXT NOT NULL
);

-- ===============================
-- 점검 결과 테이블
-- ===============================
CREATE TABLE IF NOT EXISTS inspections (
    id INTEGER PRIMARY KEY AUTOINCREMENT,

    inspect_date TEXT NOT NULL,     -- 점검일
    inspector TEXT NOT NULL,        -- 점검자

    name TEXT NOT NULL,             -- 점검 대상자
    department TEXT NOT NULL,
    asset_no TEXT NOT NULL,
    sticker_no TEXT NOT NULL,

    item1 INTEGER NOT NULL,          -- 보안스티커
    item2 INTEGER NOT NULL,          -- 스마트키퍼/케이블락
    item3 INTEGER NOT NULL,          -- 클린데스크
    item4 INTEGER NOT NULL,          -- 퇴근 시 PC OFF
    item5 INTEGER NOT NULL,          -- 패스워드 메모

    comment TEXT,                    -- 코멘트
    photo_path TEXT,                -- 사진 경로
    status TEXT NOT NULL,            -- temp / submitted

    created_at TEXT DEFAULT CURRENT_TIMESTAMP
);
